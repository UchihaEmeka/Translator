<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffcbc2a6">

    <EditText
        android:id="@+id/etUserText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Enter the text here"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <requestFocus />
    </EditText>
    <Spinner
        android:id="@+id/mySpinner"
        android:background="#4caf50"
        android:popupBackground="#4caf50"
        android:textColor="#f3e5f5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUserText"
        android:layout_alignLeft="@+id/etUserText"
        android:layout_alignStart="@+id/etUserText"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />
    <TextView
        android:id="@+id/tvTranslatedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUserText"
        android:layout_marginTop="168dp"
        android:hint="Translated text will be here"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignLeft="@+id/bTranslate"
        android:layout_alignStart="@+id/bTranslate"
        android:layout_alignRight="@+id/bTranslate"
        android:layout_alignEnd="@+id/bTranslate" />

    <Button
        android:id="@+id/bTranslate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translate"
        android:background="#4caf50"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/mySpinner"
        android:layout_alignLeft="@+id/mySpinner"
        android:layout_alignStart="@+id/mySpinner"
        android:layout_alignRight="@+id/etUserText"
        android:layout_alignEnd="@+id/etUserText" />

    <Button
        android:id="@+id/bSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="Speak"
        android:background="#4caf50"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/tvTranslatedText"
        android:layout_centerHorizontal="true" />
    //android:visibility="gone"/>



</RelativeLayout>